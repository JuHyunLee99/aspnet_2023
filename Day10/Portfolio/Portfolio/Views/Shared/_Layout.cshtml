<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewData["Title"] - 포토폴리오 웹앱</title>
    <!-- Favicons -->
    <link rel="icon" href="~/themes/iPortfolio/assets/img/introduction.png" />
    <!-- WYSWYG 에디터 링크 -->
    <link rel="stylesheet" href="~/lib/trumbowyg/ui/trumbowyg.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <!-- Vendor CSS Files -->
    <link href="~/themes/iPortfolio/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/themes/iPortfolio/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/themes/iPortfolio/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/themes/iPortfolio/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/themes/iPortfolio/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/themes/iPortfolio/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <!-- Template Main CSS File -->
    <link href="~/themes/iPortfolio/assets/css/style.css" rel="stylesheet">
    <!-- 개인 추가 CSS File-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Toast 메시지창 js 라이브러리 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
@*<body class="mobile-nav-active">*@
<body class="mobile-nav-active">
    <!-- ======= Mobile nav toggle button ======= -->
    <i class="bi bi-x mobile-nav-toggle"></i>

    <!-- ======= Header ======= -->
    <header id="header">
        <div class="d-flex flex-column">

            <div class="profile">
                <img src="~/themes/iPortfolio/assets/img/profile-img.jpg" alt="" class="img-fluid rounded-circle">
                <h1 class="text-light"><a href="index.html">Alex Smith</a></h1>
            </div>

            <nav id="navbar" class="nav-menu navbar">
                <ul>
                    <li><a asp-action="Index" asp-controller="Home" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>Home</span></a></li>
                    @if (ViewData["NavHome"] == "true")
                    {
                        <li><a href="#about" class="nav-link scrollto"><i class="bx bx-user"></i> <span>About</span></a></li>
                        <li><a href="#resume" class="nav-link scrollto"><i class="bx bx-file-blank"></i> <span>Resume</span></a></li>
                        <li><a href="#portfolio" class="nav-link scrollto"><i class="bx bx-book-content"></i> <span>Portfolio</span></a></li>
                        <li><a href="#services" class="nav-link scrollto"><i class="bx bx-server"></i> <span>Services</span></a></li>
                        <li><a href="#contact" class="nav-link scrollto"><i class="bx bx-envelope"></i> <span>Contact</span></a></li>
                    }

                    @if (signInManager.IsSignedIn(User))
                    {
                        <li>
                            <a asp-controller="Account" asp-action="Profile" asp-route-userName="@userManager.GetUserName(User)" class="nav-link scrollto active"><i class="bi bi-sliders"></i><span>관리자</span></a>
                        </li>
                        @if (ViewData["NavHome"] != "true")
                        {
                            <li><a asp-controller="Portfolio" asp-action="Create" class="nav-link scrollto active"><span>Portfolio 관리</span></a></li>
                        }
                        <li class="nav-link scrollto active">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" style="padding: 12px 15px;" class="btn btn-link nanum-bold">@userManager.GetUserName(User)</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Login" class="nav-link scrollto active"><i class="bi bi-sliders"></i><span>관리자</span></a></li>
                    }
                </ul>
                    
                       
                
            </nav><!-- .nav-menu -->
        </div>
    </header><!-- End Header -->
        @RenderBody()

    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>iPortfolio</span></strong>
            </div>
            <div class="credits">
                <!-- All the links in the footer should remain intact. -->
                <!-- You can delete the links only if you purchased the pro version. -->
                <!-- Licensing information: https://bootstrapmade.com/license/ -->
                <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/iportfolio-bootstrap-portfolio-websites-template/ -->
                Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
            </div>
        </div>
    </footer><!-- End  Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/themes/iPortfolio/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/aos/aos.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/typed.js/typed.umd.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/themes/iPortfolio/assets/js/main.js"></script>

    <!-- WYSWYG 에디터용 js & 한국어언어팩 js -->
    <script src="~/lib/trumbowyg/trumbowyg.min.js"></script>
    <script src="~/lib/trumbowyg/langs/ko.min.js"></script>
    <!-- trumbowyg를 site.js에서 부르기때문에 상위에 trumbowyg에 관련된 js가 먼저 나와야.. -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
